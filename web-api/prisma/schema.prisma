generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["business"]
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  player Player?

  @@map("user")
  @@schema("business")
}

model Player {
  id       Int    @id @default(autoincrement())
  userName String @map("user_name")
  userId   Int    @unique @map("user_id")

  Duel Duel[]
  User User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("player")
  @@schema("business")
}

model Duel {
  id       Int @id @default(autoincrement())
  winnerId Int @map("winner_id")

  winner Player @relation(fields: [winnerId], references: [id], onDelete: Cascade)

  @@map("duel")
  @@schema("business")
}
