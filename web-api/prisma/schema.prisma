generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["admin", "business"]
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  player Player?

  @@map("user")
  @@schema("admin")
}

model Player {
  id       Int    @id @default(autoincrement())
  userName String @map("user_name")
  userId   Int    @unique @map("user_id")

  challenger Challenge[] @relation("Challenger")
  challenged Challenge[] @relation("Challenged")
  winner     Challenge[] @relation("Winner")
  User       User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("player")
  @@schema("business")
}

model Challenge {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")

  challengerId Int  @map("challenger_id")
  challengedId Int  @map("challenged_id")
  winnerId     Int? @map("winner_id")

  challenger Player  @relation("Challenger", fields: [challengerId], references: [id], onDelete: Cascade)
  challenged Player  @relation("Challenged", fields: [challengedId], references: [id], onDelete: Cascade)
  winner     Player? @relation("Winner", fields: [winnerId], references: [id], onDelete: Cascade)

  @@map("challenge")
  @@schema("business")
}
